{% extends 'base.html.twig' %}

{% block title %} {{product.name}}{% endblock %}

{% block content %}
        <div class="row product-container mt-5">
            <div class="col-md-5">
                <img class="img-fluid" src="/assets/illustration/{{product.illustration}}" alt="{{product.name}}">
            </div>
            <div class="col-md-7" style="margin-top: 50px; ">
                <h3 class="">{{product.name}}</h3>
                <p class=" product-subtitle">{{product.subtitle}}</p>
                <span class="product-price">{{ (product.price / 100) | number_format(2, ',', '.') }} Â£</span>
                <hr>
                <p>{{product.description}}</p>
                <a href="{{path('app_add_to_cart', {'id': product.id})}}" class="btn btn-primary">Ajouter au panier</a>
            </div>
        </div>
    
{% endblock %}
