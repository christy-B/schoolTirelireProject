{% extends 'base.html.twig' %}

{% block title %}Nos produits - La Boutique E-commerce!{% endblock %}

{% block content %}
    <h1>Nos produits</h1>
        <div class="row product-container">
            {% for product in products %}
                <div class="col-md-4">
                    <div class="product-item">
                        <a href="{{ path('app_product_slug', {'slug' : product.slug })}}"><img class="img-fluid" src="/assets/illustration/{{product.illustration}}" alt="{{product.name}}"></a>
                        <h5 class="">{{product.name}}</h5>
                        <span class=" product-subtitle">{{product.subtitle}}</span>
                        <span class="product-price">{{ (product.price / 100) | number_format(2, ',', '.') }} Â£</span>
                    </div>
                </div>
            {% endfor %}
        </div>
    
{% endblock %}
