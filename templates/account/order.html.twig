{% extends 'base.html.twig' %}

{% block title %}Mes commandes{% endblock %}

{% block content %}
    <h1 class="mb-5 text-center">Mes Commandes</h1>
    <a href="{{ path('app_account') }}">Retour</a>
    {% if orders | length  %}
        <table class="table table-mt-4">
        <thead>
            <tr>
            <th scope="col">Référence</th>
            <th scope="col">Status</th>
            <th scope="col">Produit(s)</th>
            <th scope="col">Total</th>
            <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {% for order in orders %}
                <tr>
                    <td><span class="badge badge-secondary">{{order.reference}}</span></td>
                    <td>
                        {% if order.state == 1 %}
                            Paiement en cours
                        {% elseif order.state == 2 %}
                            Préparation en cours
                        {% elseif order.state == 3 %}
                            Livraison en cours
                        {% endif %}
                    </td>
                    <td>{{order.createdAt|date('d/m/Y')}}</td>
                    <td>{{order.orderDetails|length}}</td>
                    <td>
                        {{((order.carrierPrice + order.getTotal) / 100)| number_format(2, ',', '.') }} £
                    </td>
                    <td class="text-right">
                        <a href="{{path('app_account_order_show', {'reference': order.reference})}}">Voir ma commande</a>
                    </td>
                </tr>
            {% endfor %}
            
        </tbody>
    </table>
    {% else %}
        <hr>
        <p>Vous n'avez pas encore passé de commande</p>
    {% endif %}
{% endblock %}
