{% extends 'base.html.twig' %}

{% block title %}Mes adresses{% endblock %}

{% block content %}
    <a href="{{path('app_account')}}">Retour</a>
    <a href="{{path('app_add_address')}}" class="btn btn-info btn-sm float-right">Ajouter une adresse</a>
    <h1> Mes adresses </h1>
    {% if app.user.addresses | length > 0%}
        <div class="row">
            {% for address in app.user.addresses %}
                <div class="card col-md-3 mr-2" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{address.name}}</h5>
                        <p class="card-text">
                            {{address.address}} <br>
                            {{address.postal}} - {{address.city}} - {{address.country}}   
                        </p>
                        <a href="{{path('app_edit_address', {'id':address.id})}}">Modifier</a> | <a href="{{path('app_delete_address', {'id':address.id})}}">Supprimer</a>
                        
                    </div>
                    </div>
            {% endfor %}
        </div>
    {% else %}
        <p>vous n'avez pas encore ajouter d'adresse</p>
    {% endif %}
{% endblock %}
